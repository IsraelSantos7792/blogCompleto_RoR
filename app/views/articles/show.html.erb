<article class="blog-post">
  <h2 class="blog-post-title"><%= @article.title %></h2>
  <p class="blog-post-meta">
    <%= render 'article_detail', article: @article %>
  </p>

  <p><%= @article.body %></p>

  <%= link_to 'Excluir', article_path(@article),
    method: :delete,
    data: { confirm: 'Voce tem certeza?' }, 
    class: "btn btn-danger" if policy(@article).destroy? %>
  <%= link_to 'Editar', edit_article_path(@article), 
    class: "btn btn-secondary" if policy(@article).update? %>

  <%= link_to 'Voltar', root_path, class: "btn btn-secondary" %>
</article>  