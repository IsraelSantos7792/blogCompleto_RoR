<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= month_day_comma_year(comment.created_at) %></h5>
    <h6 class="card-subtitle mb-2 text-muted">Por: <%= comment.user.email %></h6>
    <p class="card-text"><%= comment.body %></p>
    <%= link_to 'Excluir', article_comment_path(@article, comment),
    method: :delete,
    data: { confirm: 'Voce tem certeza?' }, 
    class: "btn btn-danger" if policy(comment).destroy? %>
  </div>
</div>