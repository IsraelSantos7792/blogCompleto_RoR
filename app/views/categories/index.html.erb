<h1>Categories</h1>
<p>
  <%= link_to 'Nova categoria', new_category_path, class: "btn btn-primary" %>
</p>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%# <%= link_to 'Mostrar', category , class: "btn btn-outline-secondary" %> 
          <%= link_to 'Editar', edit_category_path(category) , class: "btn btn-outline-secondary" %>
          <%= link_to 'Deletar', category, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

